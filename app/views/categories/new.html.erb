<h1 align='center'>Create new category</h1>


<%= render 'shared/errors', obj: @category %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@category, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :name%>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Enter name' %>
        </div>
      </div>
    
      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <%= f.submit(@category.new_record? ? 'Create category' : 'Update category', class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
